<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mia.cm.anand.tennisapp.SecondActivity"
    android:background="@color/accent_material_light">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/player1name"
        android:layout_gravity="center_horizontal"
        android:hint="Player1"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/foreground_material_dark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/player2name"
        android:layout_gravity="center_horizontal"
        android:hint="Player2"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="@color/foreground_material_dark"
        android:layout_below="@+id/player1name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/startGame"
        android:backgroundTint="@color/button_material_light"
        android:onClick="startGame"
        android:background="#808080"
        android:layout_below="@+id/player2name"
        android:layout_centerHorizontal="true"
        android:padding="15dp" />

</RelativeLayout>
