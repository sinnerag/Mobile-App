<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_material_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mia.cm.anand.tennisapp.ThirdActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/start"
        android:onClick="onclickStart" />


    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="00:00:00"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/reset"
        android:onClick="onClickStop" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:hint="Player1"
        android:text="@string/player1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/player2name"
        android:layout_alignBottom="@+id/player2name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/player2name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:hint="Player2"
        android:text="@string/player2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_below="@+id/reset"
        android:layout_alignLeft="@+id/player2button"
        android:layout_alignStart="@+id/player2button" />

    <TextView
        android:id="@+id/p1s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/player1"
        android:layout_alignRight="@+id/player1"
        android:layout_alignTop="@+id/p2s1"
        android:text="0"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/p1s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/p1s1"
        android:layout_alignStart="@+id/p1s1"
        android:layout_below="@+id/p1s1"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/p1s1"
        android:layout_alignEnd="@+id/p1s1" />

    <TextView
        android:id="@+id/p1s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/p1s2"
        android:layout_alignStart="@+id/p1s2"
        android:layout_alignTop="@+id/p2s3"
        android:text="0"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/p2s1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player2name"
        android:layout_alignStart="@+id/player2name"
        android:layout_below="@+id/player2name"
        android:layout_marginTop="22dp"
        android:text="0"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/p2s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/p2s3"
        android:layout_alignStart="@+id/p2s3"
        android:layout_alignTop="@+id/p1s2"
        android:text="0"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/p2s3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ffffff"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/p2s2"
        android:layout_alignLeft="@+id/p2s1"
        android:layout_alignStart="@+id/p2s1" />


    <Button
        android:id="@+id/player1button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/p1s3"
        android:layout_alignLeft="@+id/player1"
        android:layout_alignStart="@+id/player1" />

    <Button
        android:id="@+id/player2button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:layout_alignTop="@+id/player1button"
        android:layout_toLeftOf="@+id/reset"
        android:layout_toStartOf="@+id/reset" />

</RelativeLayout>